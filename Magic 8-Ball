import random

# Declare variables for name, question, and answer
name = "Joe"  # Replace with the name of the person asking
question = "Will I win the lottery?"  # Replace with the Yes/No question
answer = ""

# Generate a random number between 1 and 9
random_number = random.randint(1, 9)

# Determine the answer based on the random number
if random_number == 1:
    answer = "Yes - definitely"
elif random_number == 2:
    answer = "It is decidedly so"
elif random_number == 3:
    answer = "Without a doubt"
elif random_number == 4:
    answer = "Reply hazy, try again"
elif random_number == 5:
    answer = "Ask again later"
elif random_number == 6:
    answer = "Better not tell you now"
elif random_number == 7:
    answer = "My sources say no"
elif random_number == 8:
    answer = "Outlook not so good"
elif random_number == 9:
    answer = "Very doubtful"
else:
    answer = "Error"

# Output the result
if name and question:
    print(f"{name} asks: {question}")
    print(f"Magic 8-Ball's answer: {answer}")
elif question:
    print(f"Question: {question}")
    print(f"Magic 8-Ball's answer: {answer}")
else:
    print("You didn't ask a question. Please ask a 'Yes' or 'No' question.")

# Optional Challenge: Add more possible answers by increasing the range and adding more elif statements.
# Optional Challenge: Improve formatting when name or question is missing.
